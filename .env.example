# Environment Configuration for Real Sentiment Analysis App
# Copy this to .env and configure with your actual API keys

# Database Configuration
DATABASE_URL=sqlite:///sentiment_analysis.db
# For PostgreSQL: postgresql://user:password@localhost/sentiment_analysis
# For MySQL: mysql://user:password@localhost/sentiment_analysis

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# News API Keys (get from respective services)
NEWSAPI_KEY=your-newsapi-org-key-here
GNEWS_API_KEY=your-gnews-io-key-here
CURRENTS_API_KEY=your-currents-api-key-here

# OpenAI API (for advanced NLP features)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face API (for transformer models)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Social Media API Keys
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=sentiment_analysis.log

# Performance Settings
MAX_CONTENT_LENGTH=104857600  # 100MB
REQUEST_TIMEOUT=30
BATCH_SIZE=50

# Model Configuration
DEFAULT_SENTIMENT_MODEL=roberta
ENABLE_GPU=False
MODEL_CACHE_SIZE=3

# Video Processing
MAX_VIDEO_DURATION=600  # 10 minutes
ENABLE_TRANSCRIPT_EXTRACTION=True
AUDIO_SAMPLE_RATE=16000

# News Scraping
NEWS_FETCH_INTERVAL=300  # 5 minutes
MAX_ARTICLES_PER_SOURCE=10
ENABLE_CONTENT_EXTRACTION=True

# Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90
ENABLE_USAGE_TRACKING=True

# Security
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60
ENABLE_API_KEY_AUTH=False
API_KEY=your-api-key-for-external-access

# Enhanced Free APIs for Immersive Dashboard
# Weather API (OpenWeatherMap - free tier available)
OPENWEATHER_API_KEY=your-openweathermap-api-key

# Stock Market APIs (free tiers available)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
FINNHUB_API_KEY=your-finnhub-api-key

# X/Twitter API (for social sentiment)
X_API_KEY=your-x-api-key
X_API_SECRET=your-x-api-secret

# External Services
GOOGLE_CLOUD_API_KEY=your-google-cloud-key
AZURE_COGNITIVE_SERVICES_KEY=your-azure-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Note: The following APIs are completely free and don't require keys:
# - CoinGecko (Cryptocurrency data)
# - Quotable.io (Inspirational quotes)
# - Official Joke API (Clean jokes)
# - Useless Facts API (Random facts)
# - RSS Feeds (News fallback)
